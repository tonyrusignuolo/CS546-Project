<div class="sticky post-it spaced shadow flex-column">
    <h1 class="title-text">Create a Practitioner</h1>
    <form id="create-practitioner-form" class="flex-column baseline" method="POST">
        <label>Name <input class="wide-input" type="text" name="name"></label>
        <div class="flex-row">
            <label>Latitute <input type="number" step="0.000001" name="lat"></label>
            <label>Longitude <input type="number" step="0.000001" name="long"></label>
        </div>
        <h3 class="title-text unset-size">Procedures</h3>
        <div id="procedures"></div>
        <div class="flex-row">
            <i id="add-procedure" class="clickable material-icons">add</i>
            <i id="del-procedure" class="clickable material-icons">remove</i>
        </div>
        <h3 class="title-text unset-size">Accepted Providers</h3>
        <div id="providers" class="flex-column"></div>
        <div class="flex-row">
            <i id="add-provider" class="clickable material-icons">add</i>
            <i id="del-provider" class="clickable material-icons">remove</i>
        </div>
        <i id="submit" class="clickable material-icons">done</i>
        <span id="msg" class="info-text"></span>
    </form>
</div>