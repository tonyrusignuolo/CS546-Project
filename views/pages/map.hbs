{{#> layouts/main}}

{{#*inline "style-block"}}
<link rel='stylesheet' href="/public/map/mapstyle.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<meta name="viewport" content="initial-scale=1.0">
{{/inline}}

{{#*inline "main-block"}}
<div id="wrapper">
	<div id="first">
		<div class="main">
			<div class="section">
				<div class="container">
					<div align="center">
						<div class="col-lg-12 col-md-12 ml-auto mr-auto">
							<h2>Map Service</h2>

							<form id="search-params">
								<div class="form-group">
									<label for="insurance-drop">Select an insurance provider</label>
									<select class="form-control selectpicker" data-style="btn btn-link"
										id="insurance-drop">
										<option>-</option>
										{{#each options.insurance}}
										<option>
											{{this}}
										</option>
										{{/each}}
									</select>
								</div>
								<div class="form-group">
									<label for="procedure-drop">Select a procedure</label>
									<select class="form-control selectpicker" data-style="btn btn-link"
										id="procedure-drop">
										<option>-</option>
										{{#each options.procedures}}
										<option>
											{{this}}
										</option>
										{{/each}}
									</select>
								</div>
								<button type="submit" class="btn btn-primary">Submit</button>
							</form>
							<p id="errmess"></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="second">
		<div id="map"></div>
	</div>
</div>
{{/inline}}

{{#*inline "modals-block"}}
{{> modals/appointment/create}}
{{/inline}}


{{#*inline "scripts-block"}}
{{> map/apikey}}
<script src="https://code.jquery.com/jquery-2.2.4.min.js"
	integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="/public/map/js/healthmap.js"></script>
{{/inline}}

{{/layouts/main}}