<head>
    <meta charset="utf-8">
    <title>Create Profile</title>
    <link rel='stylesheet' href="/public/site.css">

</head>

<body>
    <main>
        <h1>Create User Profile</h1>

        <form action="/profile/create-profile" method="post">
            <label for="email">Enter email address</label>
            <input name="email" type="email" id="email">

            <label for="hashedPassword">Enter new password</label>
            <input name="hashedPassword" type="text" id="hashedPassword">

            <label for="firstName">First Name</label>
            <input name="firstName" type="text" id="firstName">

            <label for="lastName">Last Name</label>
            <input name="lastName" type="text" id="lastName">

            <label for="isAdmin">Is admin temp handling</label>
            <input name="isAdmin" type="text" id="isAdmin">

            <label for="insuranceProvider">Select an insurance provider</label>
            <input name="insuranceProvider" type="text" id="insuranceProvider">

            <input type="submit" value="submit">

        </form>

    </main>
</body>